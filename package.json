{
  "name": "specter",
  "version": "1.0.0",
  "description": "Pentest, Red Team & CTF Desktop Application - Attack Path Guidance & Evidence Management",
  "main": "dist/main/main.js",
  "author": "Specter Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "electron:dev": "concurrently \"npm run dev:main\" \"wait-on dist/main/main.js && electron .\" \"npm run dev:renderer\"",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@xterm/xterm": "^5.3.0",
    "@xterm/addon-fit": "^0.8.0",
    "@xterm/addon-web-links": "^0.9.0",
    "sql.js": "^1.10.2",
    "electron-store": "^8.1.0",
    "ssh2": "^1.15.0",
    "uuid": "^9.0.1",
    "marked": "^12.0.0",
    "date-fns": "^3.3.1",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@types/sql.js": "^1.4.9",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@types/ssh2": "^1.11.19",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^29.0.1",
    "electron-builder": "^24.12.0",
    "eslint": "^8.56.0",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.specter.app",
    "productName": "Specter",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
